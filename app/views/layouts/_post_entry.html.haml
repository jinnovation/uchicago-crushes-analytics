- post_user = post.user_highest_score
- post_pic = if not post_user.nil? then image_tag(post_user.pic_url_medium) else holder_tag("100x100", "Unknown") end
%td.media
  .thumbnail.pull-right.media-object.img-responsive
    = post_pic
    .caption.center
      = if post_user.nil? then "" else post_user.quotient(post).to_s end
  .media-body
    .media-heading
      -# TODO: modal contain facebook post
      %h4= post.fb_created_time.strftime("%B %d, %Y %l:%M %p")
    = link_to post.content, post, {:'data-toggle'=>"modal", :'data-target'=>"#homepage-info-modal"}

