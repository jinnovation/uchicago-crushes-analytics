#post-table.scrollable
  %table.table.table-hover

    - @posts.sort_by {|post| post.fb_created_time}.reverse.each do |post|
      %tr
        %td.media
          -# TODO: this is disgusting; partial-ize it
          - post_user = post.user_highest_score
          - post_pic = if not post_user.nil? then image_tag(post_user.pic_url_medium, class: "media-object thumbnail img-responsive pull-right") else holder_tag("100x100", "Unknown", class: "media-object thumbnail img-responsive pull-right") end
          = link_to post_pic, "#", class: "pull-right"
          .media-body
            .media-heading
              -# TODO: modal contain facebook post
              %h4= post.fb_created_time.strftime("%B %d, %Y %l:%M %p")
            = link_to post.content, post, {:'data-toggle'=>"modal", :'data-target'=>"#homepage-info-modal"}
            %p= if post_user.nil? then "" else post_user.quotient(post).to_s end
