.media
  .pull-right.media-object.img-responsive
    = render "users/thumbnail_caption", user: post.user_with_highest_score, post: post
  .media-body
    .media-heading
      -# TODO: modal contain facebook post
      %h4= post.fb_created_time.strftime(POST_TIME_DISP_FMT)
    = link_to post.content, post, {:'data-toggle'=>"modal", :'data-target'=>"#homepage-info-modal"}

